<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootScenePane" prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng201.team0.gui.TutorialController">
    <children>
        <StackPane fx:id="contentAreaHolder" prefHeight="600.0" prefWidth="800.0">
            <children>
                <ImageView fx:id="backgroundImageView" fitHeight="${contentAreaHolder.height}" fitWidth="${contentAreaHolder.width}" pickOnBounds="true" preserveRatio="false">
                    <image>
                        <Image url="@2151710994.jpg" />
                    </image>
                </ImageView>

                <VBox alignment="TOP_CENTER" maxHeight="500.0" maxWidth="700.0" prefHeight="500.0" prefWidth="700.0" spacing="20.0" style="-fx-background-color: rgba(0,0,0,0.65); -fx-padding: 25; -fx-border-color: rgba(255,255,255,0.25); -fx-border-width: 1; -fx-background-radius: 10; -fx-border-radius: 10;">
                    <Label style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: white;" text="How to Play: Rocket Racing!" textAlignment="CENTER">
                        <font>
                            <Font name="System Bold" size="30.0" />
                        </font>
                        <VBox.margin>
                            <Insets bottom="5.0" />
                        </VBox.margin>
                    </Label>

                    <Label style="-fx-font-size: 18px; -fx-text-fill: #E0E0E0;" text="Welcome, aspiring racer! Your journey to becoming a racing legend begins here." textAlignment="CENTER" wrapText="true">
                        <VBox.margin>
                            <Insets bottom="10.0" />
                        </VBox.margin>
                    </Label>

                    <VBox spacing="15.0" style="-fx-padding: 20; -fx-background-color: rgba(0,0,0,0.4); -fx-border-color: rgba(255,255,255,0.2); -fx-border-width: 1; -fx-background-radius: 8; -fx-border-radius: 8;">
                        <Label style="-fx-font-size: 16px; -fx-text-fill: white;" text="• Participate in races to earn money!" wrapText="true" />
                        <Label style="-fx-font-size: 16px; -fx-text-fill: white;" text="• Enter the shop to buy new cars and upgrades." wrapText="true" />
                        <Label style="-fx-font-size: 16px; -fx-text-fill: white;" text="• If you come 1st in a course, new upgrades and cars will become available." wrapText="true" />
                        <Label style="-fx-font-size: 16px; -fx-text-fill: white;" text="• Try and get the most money and wins!" wrapText="true" />
                    </VBox>

                    <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
                        <Button onAction="#onMenuButtonClicked" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-padding: 10 25; -fx-background-color: rgba(0,0,0,0.6); -fx-text-fill: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-border-color: rgba(255,255,255,0.3); -fx-border-width: 1;" text="Menu" />
                    </HBox>
                </VBox>
            </children>
        </StackPane>
    </children>
</StackPane>
