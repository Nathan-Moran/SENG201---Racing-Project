<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="rootScenePane" prefWidth="1024.0" prefHeight="768.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng201.team0.gui.CatalogueOneController">
    <children>
        <StackPane fx:id="contentAreaHolder" prefHeight="524.0" prefWidth="726.0">
            <children>
                <ImageView fx:id="backgroundImageView" fitHeight="${contentAreaHolder.height}" fitWidth="${contentAreaHolder.width}" pickOnBounds="true" preserveRatio="false">
                    <image>
                        <Image url="@cartoon-desert-landscape-vector-51673450.jpg" />
                    </image>
                </ImageView>

                <BorderPane prefHeight="524.0" prefWidth="726.0" maxHeight="524.0" maxWidth="726.0" style="-fx-background-color: transparent;">
                    <top>
                        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 15; -fx-background-color: transparent;">
                            <HBox alignment="CENTER" style="-fx-background-color: rgba(0,0,0,0.4); -fx-padding: 8 18 8 18; -fx-border-radius: 10; -fx-background-radius: 10;">
                                <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;" text="Item Catalogue" />
                            </HBox>
                            <Region HBox.hgrow="ALWAYS" />
                        </HBox>
                    </top>
                    <center>
                        <HBox alignment="TOP_CENTER" spacing="25" style="-fx-padding: 20; -fx-background-color: transparent;">
                            <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: rgba(0,0,0,0.4); -fx-border-color: rgba(255,255,255,0.2); -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8;">
                                <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 0 0 5 0;" text="Starter Cars" />
                                <TableView fx:id="starterCarTable" prefHeight="217.0" prefWidth="310.0" style="-fx-background-color: rgba(0,0,0,0.2); -fx-control-inner-background: rgba(0,0,0,0.2); -fx-selection-bar: rgba(255,255,255,0.3); -fx-selection-bar-text: white; -fx-text-fill: white;">
                                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY_ALL_COLUMNS" /></columnResizePolicy>
                                    <columns>
                                        <TableColumn fx:id="starterModelColumn" prefWidth="90.0" text="🛻" />
                                        <TableColumn fx:id="starterPriceColumn" prefWidth="60.0" text="\$" />
                                        <TableColumn fx:id="starterSpeedColumn" prefWidth="40.0" text="⚡" />
                                        <TableColumn fx:id="starterHandlingColumn" prefWidth="40.0" text="🎮" />
                                        <TableColumn fx:id="starterReliabilityColumn" prefWidth="40.0" text="🛠️" />
                                        <TableColumn fx:id="starterFuelColumn" prefWidth="40.0" text="⛽" />
                                    </columns>
                                </TableView>
                                <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;" />
                            </VBox>
                            <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: rgba(0,0,0,0.4); -fx-border-color: rgba(255,255,255,0.2); -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8;">
                                <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 0 0 5 0;" text="Shop Cars" />
                                <TableView fx:id="shopCarTable" prefHeight="217.0" prefWidth="310.0" style="-fx-background-color: rgba(0,0,0,0.2); -fx-control-inner-background: rgba(0,0,0,0.2); -fx-selection-bar: rgba(255,255,255,0.3); -fx-selection-bar-text: white; -fx-text-fill: white;">
                                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY_ALL_COLUMNS" /></columnResizePolicy>
                                    <columns>
                                        <TableColumn fx:id="shopModelColumn" prefWidth="90.0" text="🛻" />
                                        <TableColumn fx:id="shopPriceColumn" prefWidth="60.0" text="\$" />
                                        <TableColumn fx:id="shopSpeedColumn" prefWidth="40.0" text="⚡" />
                                        <TableColumn fx:id="shopHandlingColumn" prefWidth="40.0" text="🎮" />
                                        <TableColumn fx:id="shopReliabilityColumn" prefWidth="40.0" text="🛠️" />
                                        <TableColumn fx:id="shopFuelColumn" prefWidth="40.0" text="⛽" />
                                    </columns>
                                </TableView>
                                <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;" />
                            </VBox>
                        </HBox>
                    </center>
                    <bottom>
                        <StackPane style="-fx-padding: 15; -fx-background-color: transparent;">
                            <Button onAction="#switchToSceneMenu" style="-fx-font-weight: bold; -fx-font-size: 13px; -fx-padding: 8 18 8 18; -fx-background-color: rgba(0,0,0,0.4); -fx-text-fill: white; -fx-border-radius: 8; -fx-background-radius: 8;" text="Menu" StackPane.alignment="CENTER_LEFT" />
                            <Button onAction="#switchToPageTwo" style="-fx-font-weight: bold; -fx-font-size: 13px; -fx-padding: 8 18 8 18; -fx-background-color: rgba(0,0,0,0.4); -fx-text-fill: white; -fx-border-radius: 8; -fx-background-radius: 8;" text="Page Two" StackPane.alignment="CENTER_RIGHT" />
                            <Button onAction="#getDescription" style="-fx-font-weight: bold; -fx-font-size: 13px; -fx-padding: 8 18 8 18; -fx-background-color: rgba(0,0,0,0.4); -fx-text-fill: white; -fx-border-radius: 8; -fx-background-radius: 8;" text="Get Description" StackPane.alignment="CENTER"/>
                        </StackPane>
                    </bottom>
                </BorderPane>
            </children>
        </StackPane>
    </children>
</StackPane>