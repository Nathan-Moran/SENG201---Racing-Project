<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<StackPane fx:id="rootScenePane" prefWidth="1024.0" prefHeight="768.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng201.team0.gui.RaceFinishController">
    <children>
        <StackPane fx:id="contentAreaHolder" prefWidth="800.0" prefHeight="600.0">
            <children>
                <ImageView fx:id="backgroundImageView" fitHeight="${contentAreaHolder.height}" fitWidth="${contentAreaHolder.width}" pickOnBounds="true" preserveRatio="false">
                    <image>
                        <Image url="@cartoon-desert-landscape-vector-51673450.jpg" />
                    </image>
                </ImageView>

                <VBox prefWidth="700.0" prefHeight="520.0" maxHeight="520.0" maxWidth="700.0" style="-fx-background-color: rgba(0,0,0,0.65); -fx-padding: 20; -fx-border-color: rgba(255,255,255,0.25); -fx-border-width: 1; -fx-background-radius: 10; -fx-border-radius: 10;" alignment="TOP_CENTER">
                    <Label alignment="CENTER" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: white;" text="Race Finished">
                        <VBox.margin>
                            <Insets bottom="15.0"/>
                        </VBox.margin>
                    </Label>

                    <Label fx:id="finishReason" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #E0E0E0;" alignment="CENTER">
                        <VBox.margin>
                            <Insets bottom="10.0"/>
                        </VBox.margin>
                    </Label>
                    <Label fx:id="placementMessage" style="-fx-font-size: 18px; -fx-text-fill: #A7D7FF;" wrapText="true" textAlignment="CENTER">
                        <VBox.margin>
                            <Insets bottom="20.0"/>
                        </VBox.margin>
                    </Label>

                    <Label fx:id="resultTitle" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="Final Leaderboard:">
                        <VBox.margin>
                            <Insets bottom="8.0"/>
                        </VBox.margin>
                    </Label>
                    <ListView fx:id="leaderboardListView" prefHeight="150.0" prefWidth="450.0" style="-fx-font-size: 14px; -fx-background-color: rgba(0,0,0,0.3); -fx-control-inner-background: rgba(0,0,0,0.3); -fx-text-fill: white; -fx-border-color: rgba(255,255,255,0.2); -fx-border-radius: 5; -fx-background-radius: 5;">
                        <placeholder>
                            <Label text="No results to display." style="-fx-text-fill: #B0B0B0;"/>
                        </placeholder>
                    </ListView>


                    <Label fx:id="moneyEarned" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #A6FFA6;">
                        <VBox.margin>
                            <Insets top="15.0" bottom="20.0"/>
                        </VBox.margin>
                    </Label>

                    <HBox alignment="CENTER" spacing="25">
                        <Button fx:id="mainMenuButton" text="Main Menu" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-padding: 10 25; -fx-background-color: rgba(0,0,0,0.55); -fx-text-fill: white; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: rgba(255,255,255,0.3); -fx-border-width: 1;" />
                        <Button fx:id="newRaceButton" text="New Race" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-padding: 10 25; -fx-background-color: rgba(0,100,0,0.7); -fx-text-fill: white; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: rgba(255,255,255,0.3); -fx-border-width: 1;" />
                    </HBox>
                </VBox>
            </children>
        </StackPane>
    </children>
</StackPane>