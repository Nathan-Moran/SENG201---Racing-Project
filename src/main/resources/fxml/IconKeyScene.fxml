                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <Label style="-fx-font-size: 20px; -fx-min-width: 30; -fx-alignment: CENTER; -fx-text-fill: white;" text="📈" />
                                    <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="Boost Multipler" />
                                </HBox>
                            </VBox>
                        </HBox>
                    </center>
                    <bottom>
                        <StackPane alignment="CENTER_LEFT" style="-fx-padding: 15; -fx-background-color: transparent;">
                            <Button onAction="#switchToMainMenu" style="-fx-font-weight: bold; -fx-font-size: 13px; -fx-padding: 8 18 8 18; -fx-background-color: rgba(0,0,0,0.4); -fx-text-fill: white; -fx-border-radius: 8; -fx-background-radius: 8;" text="Menu" StackPane.alignment="CENTER_RIGHT" />
                            <Button onAction="#switchToItemCatalogue" style="-fx-font-weight: bold; -fx-font-size: 13px; -fx-padding: 8 18 8 18; -fx-background-color: rgba(0,0,0,0.4); -fx-text-fill: white; -fx-border-radius: 8; -fx-background-radius: 8;" text="Item Catalogue" />
