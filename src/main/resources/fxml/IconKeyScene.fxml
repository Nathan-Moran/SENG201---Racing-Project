                            <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: rgba(0,0,0,0.4); -fx-border-color: rgba(255,255,255,0.2); -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8;">
                                <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 0 0 5 0;" text="Tuning Part Stats" />
                                <Separator prefWidth="200.0" style="-fx-background-color: rgba(255,255,255,0.3);" />
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <Label style="-fx-font-size: 20px; -fx-min-width: 30; -fx-alignment: CENTER; -fx-text-fill: white;" text="⚙" />
                                    <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="Name" />
