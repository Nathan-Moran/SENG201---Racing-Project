                                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 0 0 8 0;" text="Car Stats" />
                                <Separator prefWidth="200.0" style="-fx-background-color: rgba(255,255,255,0.3);" />
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <Label style="-fx-font-size: 20px; -fx-min-width: 30; -fx-alignment: CENTER; -fx-text-fill: white;" text="🛻" />
                                    <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="Model" />
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <Label style="-fx-font-size: 20px; -fx-min-width: 30; -fx-alignment: CENTER; -fx-text-fill: white;" text="💲" />
