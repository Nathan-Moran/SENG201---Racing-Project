                    </image>
                </ImageView>

                <BorderPane prefHeight="524.0" prefWidth="726.0" maxHeight="524.0" maxWidth="726.0" style="-fx-background-color: transparent;">
                    <top>
                        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 15; -fx-background-color: transparent;">
                            <HBox alignment="CENTER" style="-fx-background-color: rgba(0,0,0,0.4); -fx-padding: 8 18 8 18; -fx-border-radius: 10; -fx-background-radius: 10;">
                                <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;" text="Icon Key" />
                            </HBox>
                            <Region HBox.hgrow="ALWAYS" />
                        </HBox>
                    </top>
                    <center>
                        <HBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 20; -fx-background-color: transparent;">
