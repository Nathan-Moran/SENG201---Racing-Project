<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" prefHeight="524.0" prefWidth="726.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng201.team0.gui.StartMenuController">

   <top>
      <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 15; -fx-background-color: #ECEFF1; -fx-border-color: #CFD8DC; -fx-border-width: 0 0 1 0;">
         <HBox alignment="CENTER" style="-fx-background-color: #FFFFFF; -fx-padding: 8 18 8 18; -fx-border-radius: 10; -fx-background-radius: 10;">
            <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #37474F;" text="Game Setup" />
         </HBox>
         <Region HBox.hgrow="ALWAYS" />
      </HBox>
   </top>

   <center>
      <HBox spacing="20" style="-fx-padding: 20; -fx-background-color: #FAFAFA;">
         <VBox spacing="20" HBox.hgrow="ALWAYS">
            <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #FFFFFF; -fx-border-color: #CFD8DC; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0.1, 0, 1);">
               <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #37474F; -fx-padding: 0 0 5 0;" text="Enter Your Name" />
               <TextField fx:id="nameField" prefWidth="300.0" promptText="Rocket Racer" style="-fx-font-size: 14px;" />
               <Label fx:id="nameErrorLabel" managed="false" style="-fx-text-fill: #EF5350; -fx-font-weight: bold; -fx-padding: 5 0 0 0;" visible="false" />
            </VBox>

            <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #FFFFFF; -fx-border-color: #CFD8DC; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0.1, 0, 1);">
               <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #37474F; -fx-padding: 0 0 5 0;" text="Select Difficulty" />
               <HBox alignment="CENTER_LEFT" spacing="15">
                  <Button fx:id="easyButton" onAction="#setdifficultyEasy" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10 20 10 20; -fx-min-width: 120.0; -fx-pref-height: 50.0; -fx-background-color: #A5D6A7; -fx-text-fill: #1B5E20; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 3, 0.1, 0, 1);" text="Easy" />
                  <Button fx:id="mediumButton" onAction="#setdifficultyMedium" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10 20 10 20; -fx-min-width: 120.0; -fx-pref-height: 50.0; -fx-background-color: #FFEE58; -fx-text-fill: #625B00; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 3, 0.1, 0, 1);" text="Medium" />
                  <Button fx:id="hardButton" onAction="#setdifficultyHard" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10 20 10 20; -fx-min-width: 120.0; -fx-pref-height: 50.0; -fx-background-color: #FF8A65; -fx-text-fill: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 3, 0.1, 0, 1);" text="Hard" />
               </HBox>
               <Label fx:id="difficultyErrorLabel" managed="false" style="-fx-text-fill: #EF5350; -fx-font-weight: bold; -fx-padding: 5 0 0 0;" text="" visible="false" />
            </VBox>

            <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #FFFFFF; -fx-border-color: #CFD8DC; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0.1, 0, 1);">
               <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #37474F; -fx-padding: 0 0 5 0;" text="Season Length" />
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <Slider fx:id="seasonSlider" blockIncrement="1" majorTickUnit="1" max="15.0" min="5.0" minorTickCount="0" onDragDone="#setSeasonLength" prefWidth="350.0" showTickLabels="true" snapToTicks="true" />
               </HBox>
            </VBox>
         </VBox>

         <VBox minWidth="220.0" prefWidth="240.0" spacing="15" style="-fx-padding: 20; -fx-background-color: #FFFFFF; -fx-border-color: #CFD8DC; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 8, 0.1, 0, 1);">
            <Label alignment="CENTER" maxWidth="Infinity" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #37474F; -fx-padding: 0 0 10 0; -fx-alignment: CENTER;" text="Your Setup" />
            <Separator prefWidth="200.0" />
            <VBox spacing="10" style="-fx-padding: 10 0 0 0;">
               <HBox alignment="CENTER_LEFT" spacing="5">
                  <Label style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #455A64; -fx-pref-width: 80;" text="Name:" />
                  <Label fx:id="displayNameLabel" style="-fx-font-size: 14px; -fx-text-fill: #2a75be;" text="-" />
               </HBox>
               <HBox alignment="CENTER_LEFT" spacing="5">
                  <Label style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #455A64; -fx-pref-width: 80;" text="Difficulty:" />
                  <Label fx:id="displayDifficultyLabel" style="-fx-font-size: 14px; -fx-text-fill: #2a75be;" text="-" />
               </HBox>
               <HBox alignment="CENTER_LEFT" spacing="5">
                  <Label style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #455A64; -fx-pref-width: 80;" text="Races:" />
                  <Label fx:id="displaySeasonLengthLabel" style="-fx-font-size: 14px; -fx-text-fill: #2a75be;" text="-" />
               </HBox>
            </VBox>
         </VBox>
      </HBox>
   </center>

   <bottom>
      <HBox alignment="CENTER_RIGHT" style="-fx-padding: 15; -fx-background-color: #ECEFF1; -fx-border-color: #CFD8DC; -fx-border-width: 1 0 0 0;">
         <Button fx:id="acceptButton" mnemonicParsing="false" onAction="#acceptButton" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10 22 10 22; -fx-background-color: #66BB6A; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 4, 0, 0, 1);" text="Start Game" />
      </HBox>
   </bottom>
</BorderPane>
